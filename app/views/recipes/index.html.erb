<div class="section-recipe">
    <button class="food-btn">
       <%= link_to 'Add Recipe', new_user_recipe_path %>
    </button>

    <% @recipes.each do |recipe|%>
      <div class="container-recipe">
         <div class="recipe-item">
            <p> <%=link_to recipe.name, user_recipe_path(recipe.user,recipe)%></p>
            <%= button_to 'Remove', user_recipe_path(recipe.user,recipe), method: :delete %>
         </div>
           
           <p class="text-recipe"><%= recipe.description%></p>
      </div>

    <% end %>
